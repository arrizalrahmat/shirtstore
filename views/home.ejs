<%- include('partials/header', { title: "List of shirts" }) %>
  <div class="fluid-container">
    <% if (alert) { %>
      <div class="alert alert-danger mx-2" role="alert">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% } %>
    <a href="/shirts/add" class="btn btn-secondary m-2">Add new shirt</a>
    <table class="table table-striped">
      <% if (data) { %>
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Name</th>
          <th scope="col">Type</th>
          <th scope="col">Size</th>
          <th scope="col">Stock</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((el) => { %>
          <tr>
            <th scope="row"><%= el.id %></th>
            <td><%= el.name %></td>
            <td><%= el.type %></td>
            <td><%= el.size %></td>
            <td><%= el.stock %> pcs</td>
            <td>
              <a href="/shirts/edit/<%= el.id %>" class="btn btn-outline-warning btn-sm">✏️Edit</a>
              <a href="/shirts/delete/<%= el.id %>" class="btn btn-outline-danger btn-sm">❌Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
      <% } %>
    </table>
  </div>
<%- include('partials/footer') %>